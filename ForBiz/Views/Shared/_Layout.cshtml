        function InitEventOtionsTable() {
            const menuEls = Array.from(document.querySelectorAll('.button-option-person'));

            menuEls.forEach((menuEl) => {
                // Initialize MDCSimpleMenu on each ".mdc-simple-menu"
                const menu = mdc.menu.MDCMenu.attachTo(menuEl.parentElement.querySelector('.mdc-menu'));
                //menu.open = true;

                // We wrapped menu and toggle into containers for easier selecting the toggles
                const dropdownToggle = menuEl.parentElement.querySelector('.js--dropdown-toggle');
                dropdownToggle.addEventListener('click', () => {
                    menu.open = !menu.open;
                });
            });
        }

        InitEventOtionsTable();

        mdc.select.MDCSelect.attachTo(document.querySelector('.mdc-select'));
        mdc.textField.MDCTextField.attachTo(document.querySelector('.mdc-text-field'));

        const drawer = mdc.drawer.MDCDrawer.attachTo(document.querySelector('.mdc-drawer'));
        const topAppBar = mdc.topAppBar.MDCTopAppBar.attachTo(document.getElementById('app-bar'));

        topAppBar.listen('MDCTopAppBar:nav', () => {
            drawer.open = !drawer.open;
        });

        var listEl = document.querySelectorAll('.mdc-drawer .mdc-list a');

        for (var i = 0; i < listEl.length; i++)
        {
            listEl[i].addEventListener('click', (event) => {
                drawer.open = false;
            });
        }


        mdc.autoInit();
