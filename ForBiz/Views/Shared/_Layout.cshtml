<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link rel="stylesheet" href="styles.css">*@
    <script src="~/Scripts/moment.min.js"></script>

    <!-- Material Design Lite -->
    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.min.css">

    <!-- Material Design icon font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    <!--Vue-->
    <script src="~/Scripts/vue.js"></script>
    <!--vue-resource v1.5.1-->
    <script src="https://cdn.jsdelivr.net/npm/vue-resource@1.5.1"></script>

    @RenderSection("Styles", false)

    <style>
        body {
            margin: 0px
        }
    </style>
</head>
<body>
    <div class="mdl-layout mdl-js-layout">
        <header class="mdl-layout__header mdl-layout__header--scroll">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title">@ViewBag.Title</span>
                <!-- Add spacer, to align navigation to the right -->
                @*<div class="mdl-layout-spacer"></div>*@
                <!-- Navigation -->
                @*<nav class="mdl-navigation">
                      <a class="mdl-navigation__link" href="">Link</a>
                      <a class="mdl-navigation__link" href="">Link</a>
                      <a class="mdl-navigation__link" href="">Link</a>
                      <a class="mdl-navigation__link" href="">Link</a>
                </nav>*@
            </div>
        </header>
        @if (Session["Token"] != null)
        {
            <div class="mdl-layout__drawer">
                <span class="mdl-layout-title">ForBiz</span>
                <nav class="mdl-navigation">

                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "mdl-navigation__link" })
                    @Html.ActionLink("Рассылка", "Index", "Person", new { area = "" }, new { @class = "mdl-navigation__link" })
                    
                </nav>
            </div>
        }
            <main class="mdl-layout__content">
                @RenderBody()
            </main>

        </div>
</body>
</html>